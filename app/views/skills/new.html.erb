    
<div class="row bg-light" style="height: 100vh;">

    <div class="container m-5 text-dark">

            <h2 class="ml-2">Add your skills here</h2><br>

            <%= form_for @skills do |f| %>

                <div class="form-group">
                    <label class="col-sm-6 control-label">Language
                        <span class="text-danger"> * </span>
                        (EX. HTML)
                    </label>
                    <div class="col-sm-6">
                        <%= f.text_field :language, autofocus: true, class: "form-control", required: true %>
                    </div>
                </div>

                <div class="form-group">
                     <label class="col-sm-2 control-label">Description
                        <span class="text-danger"> * </span>
                    </label>
                    <div class="col-sm-6">
                        <%= f.text_field :disc, autocomplete: "off", class: "form-control", required: true %>
                    </div>
                </div>               

                <div class="form-group">
                     <label class="col-sm-2 control-label">Rating
                        <span class="text-danger"> * </span>
                    </label>
                    <div class="col-sm-6">
                        <%= f.select :rating, options_for_select([1,2,3,4,5]), prompt: 'Select One', required: true%>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-6">
                        <%= f.submit "ADD", class: "btn btn-primary" %>
                    </div>
                </div>
            <% end %>
    </div>
</div>

