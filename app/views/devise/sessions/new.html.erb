<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<link href='https://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>
<link href="https://fonts.googleapis.com/css?family=Righteous" rel="stylesheet">
<style type="text/css">
  body {
  font-family: 'Righteous', cursive;
}
</style>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-5">
        <!-- <div class="container"> -->
          <a class="text-white navbar-brand m-2"  style="font-family: Trebuchet MS " href="<%= profile_path %>">LET'S CODE
            <strong style="color: #FFCB04">(< >)</strong>
          </a>
</nav>
  <div class="container text-dark">
    <div class = "row">
      <div class="col-12">
        <h1 class="mb-4 mt-4 text-center">CODER SIGN IN</h1>
        <br>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>

          <div class="form-group">
            
            <center>
            <div class="col-sm-8">
                <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "Your Email", class: "form-control border border-dark", style: "border-radius: 0;" %>
            </div>
            </center>
            <div class="row">
              <div class="col-sm-2 ml-3"></div>
              <div class="col-sm-6 mt-1">
                <em class="text-left text-dark">Test User - test@test.com</em>
              </div>
            </div>
          </div>

          <div class="form-group">
            <center>
            <div class="col-sm-8">
                <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: "Your Password", class: "form-control border border-dark", style: "border-radius: 0;" %>
            </div>
            </center>
            <div class="row">
              <div class="col-sm-2 ml-3"></div>
              <div class="col-sm-6 mt-1">
                <em class="text-left text-dark">Password - 123123</em>
              </div>
            </div>
          </div>
          
          <% if devise_mapping.rememberable? -%>
            <div class="form-group" style="margin-left: 18%">
              <%= f.check_box :remember_me, class: "border border-dark" %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="form-group" style="margin-left: 16.5%">
            <div class="col-sm-offset-2 col-sm-6">
                <%= f.submit "LOG IN", class: "btn col-6 btn-md text-dark", style: "background-color: #FFCB04; border-radius: 0;" %>
            </div>
          </div>
        <% end %>

         <div class="form-group" style="margin-left: 16.5%">
            <div class="col-sm-offset-2 col-sm-6">
                <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-dark" %><br />
                <% end  -%>
            </div>
        </div>

      </div>
    </div>

    <div class="row mt-3">
      <div class="col-12 mt-5">
        <h1 class="mb-2 mt-5 text-center">NOT A PART OF CODNIG FAMILY YET</h1>
        <br>
        <center>
          <div class="form-group">
              <div class="col-sm-offset-2 col-sm-6">
                  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                  <%= link_to "SIGN UP", new_registration_path(resource_name), class: "btn col-6 btn-md text-dark", style: "background-color: #FFCB04;border-radius: 0;" %><br />
                  <% end -%>
              </div>
          </div>
        </center>
      </div>
    </div>  
  </div>

</div>













